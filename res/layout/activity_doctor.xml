<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="180dp"
   	android:layout_margin="10.0dip"
   	android:background="@drawable/input_single_active"
   	android:orientation="vertical"
   	android:padding="10.0dip" >

    <LinearLayout
   		android:layout_width="fill_parent"
   		android:layout_height="30.0dip"
   		android:layout_marginTop="4.0dip"
   		android:orientation="horizontal" >

   	<TextView
   	    android:layout_width="66.0dip"
   		android:layout_height="fill_parent"
   		android:layout_weight="0.23"
   		android:gravity="center"
   		android:text="我的医嘱"
   		android:textColor="#ff646464"
   		android:textSize="18.0sp" />
   </LinearLayout>

   	<View
   		android:layout_width="wrap_content"
   		android:layout_height="4.0dip"
   		android:background="@drawable/slash_bg" />

    <TextView
   		android:id="@+id/un_diagnose_result"
   		android:layout_width="fill_parent"
   		android:layout_height="80.0dip"
   		android:layout_marginTop="5.0dip"
   		android:background="#00ffffff"
   		android:gravity="top"
   		android:paddingLeft="10.0dip"
   		android:paddingRight="10.0dip"
   		android:text="暂无内容"
   		android:textColor="#ff3c3c3c"
   		android:textColorHint="#ffc1c1c1"
   		android:textSize="14.0sp" />
   			    
   <LinearLayout
        android:id="@+id/Item_Share"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="280dp"
        android:background="@drawable/button_vote_enable"
        android:gravity="center"
        android:orientation="horizontal" >

  <ImageView
        android:id="@+id/Item_Share_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="分享"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:src="@drawable/icon_fav_enable" />
   </LinearLayout>
            
</LinearLayout>
 

   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="120dp"
      android:background="@drawable/listview_item_background"
      android:orientation="vertical"
      android:layout_marginLeft="7dp"
      android:layout_marginRight="7dp"
      android:paddingTop="12dp" >

                    
      <TextView
       android:id="@+id/listitem_doctor_fistLine"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="5dp"
       android:layout_marginLeft="10dp"
       android:text="2014年11月30日18:13"
       android:singleLine="true"
       android:textColor="#815F3D"
       android:textSize="15sp" />
       
      <ImageView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="5dp"
       android:paddingBottom="10dp"
       android:scaleType="centerCrop"
       android:src="@drawable/comment_divider_line" /> 

      <TextView
       android:id="@+id/listitem_doctor_secondLine"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="5dp"
       android:layout_marginTop="5dp"
       android:text="  记得按时吃药，不要过量"
       android:textColor="@color/black"
       android:textSize="16sp" />
  
   	</LinearLayout>

   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="120dp"
      android:background="@drawable/listview_item_background"
      android:orientation="vertical"
      android:layout_marginLeft="7dp"
      android:layout_marginRight="7dp"
      android:paddingTop="12dp" >

                    
      <TextView
       android:id="@+id/listitem_doctor_fistLine2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="5dp"
       android:layout_marginLeft="10dp"
       android:text="2014年11月29日14:50"
       android:singleLine="true"
       android:textColor="#815F3D"
       android:textSize="15sp" />
       
      <ImageView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="5dp"
       android:paddingBottom="10dp"
       android:scaleType="centerCrop"
       android:src="@drawable/comment_divider_line" /> 

      <TextView
       android:id="@+id/listitem_doctor_secondLine2"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="5dp"
       android:layout_marginTop="5dp"
       android:text="  养成良好作息，坚持按时记录"
       android:textColor="@color/black"
       android:textSize="16sp" />
  
   	</LinearLayout>
   
   
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="120dp"
      android:background="@drawable/listview_item_background"
      android:orientation="vertical"
      android:layout_marginLeft="7dp"
      android:layout_marginRight="7dp"
      android:paddingTop="12dp" >

                    
      <TextView
       android:id="@+id/listitem_doctor_fistLine23"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="5dp"
       android:layout_marginLeft="10dp"
       android:text="2014年11月28日08:20"
       android:singleLine="true"
       android:textColor="#815F3D"
       android:textSize="15sp" />
       
      <ImageView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="5dp"
       android:paddingBottom="10dp"
       android:scaleType="centerCrop"
       android:src="@drawable/comment_divider_line" /> 

      <TextView
       android:id="@+id/listitem_doctor_secondLine23"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="5dp"
       android:layout_marginTop="5dp"
       android:text="  尽量减少剧烈运动，保证睡眠时间"
       android:textColor="@color/black"
       android:textSize="16sp" />
  
   	</LinearLayout>
   
   

    
</LinearLayout>
