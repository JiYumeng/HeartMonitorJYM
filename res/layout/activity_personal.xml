<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical" >

    

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/one_profile_bg1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/UserCamera"
                        android:layout_marginTop="10dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/default_avatar_lead" />

                    <TextView
                        android:id="@+id/userinfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"                        
                        android:layout_marginTop="10dp"
                        android:background="#7f000000"
                        android:text="这家伙很懒，啥也没写。"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>

            

            <LinearLayout
                android:id="@+id/UserBrief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:visibility="visible" >
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >
                <TextView
                    android:id="@+id/UserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="       姓名"
                    android:textSize="14sp" />
                
                <TextView
                    android:id="@+id/setting_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                       
                    android:paddingLeft="30dp"                   
                    android:gravity="right"          
                    android:text="嵇雨萌"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
                
                <ImageView
                    android:id="@+id/img_edit_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="140dp"                  
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/item_edit" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:text="　   年龄   "
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/UserAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:background="@drawable/nearby_gender_female"
                        android:paddingLeft="25dp"
                        android:text="21"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />
                    
                    <ImageView
                    android:id="@+id/img_edit_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="135dp"                  
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/item_edit" />
                    

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal" >
                </LinearLayout>

                
                 <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >
                <TextView
                    android:id="@+id/UserHobbies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="       身高"
                    android:textSize="14sp" />
                
                 <TextView
                    android:id="@+id/setting_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                       
                    android:paddingLeft="30dp"                   
                    android:gravity="right"          
                    android:text="171cm"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
                
                <ImageView
                    android:id="@+id/img_edit_name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="135dp"                  
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/item_edit" />
                 </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal" >
                </LinearLayout>

                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >
                <TextView
                    android:id="@+id/UserPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="       体重"
                    android:textSize="14sp" />
                
                
                <TextView
                    android:id="@+id/setting_weightt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                       
                    android:paddingLeft="30dp"                   
                    android:gravity="right"          
                    android:text="55kg"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
                
                <ImageView
                    android:id="@+id/img_edit_name4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"                  
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/item_edit" />
                 </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal" >
                </LinearLayout>

                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >
                <TextView
                    android:id="@+id/UserExplain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:paddingBottom="7dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:paddingTop="7dp"
                    android:text="    关联医生"
                    android:textSize="14sp" />
                
                 <TextView
                    android:id="@+id/setting_doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                       
                    android:paddingLeft="30dp"                   
                    android:gravity="right"          
                    android:hint="尚未关联"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
                 </LinearLayout>
                 

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal" >
                </LinearLayout>

                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >
                <TextView
                    android:id="@+id/UserTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="上次记录时间"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/setting_testtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                       
                    android:paddingLeft="30dp"                   
                    android:gravity="right"          
                    android:hint="尚未记录"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal" >
                </LinearLayout>

                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >
                <TextView
                    android:id="@+id/UserBrand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="上次记录结果"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/setting_testresult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                       
                    android:paddingLeft="30dp"                   
                    android:gravity="right"          
                    android:hint="尚未记录"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
                 </LinearLayout>
            </LinearLayout>

            
        </LinearLayout>
    </ScrollView>

</LinearLayout>